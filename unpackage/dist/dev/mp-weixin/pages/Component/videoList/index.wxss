/* flex布局 */

/* flex盒子默认排列 */
.me-fx-row {
    display: flex;
}
.me-fx-col {
    display: flex;
    flex-direction: column;
}
.me-fx-start-c {
    align-items: center;
}
.me-fx-start-end {
    align-items: flex-end;
}

/* 两端对齐 */
.me-fx-sb {
    justify-content: space-between;
}
.me-fx-sb-c {
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 20rpx;
}
.me-fx-sb-end {
    justify-content: space-between;
    align-items: flex-end;
}

/* 两端对齐，两侧有边距 */
.me-fx-sa {
    justify-content: space-around;
}
.me-fx-sa-c {
    justify-content: space-around;
    align-items: center;
}
.me-fx-sa-end {
    justify-content: space-around;
    align-items: flex-end;
}

/* 居中对齐 */
.me-fx-c {
    justify-content: center;
}
.me-fx-c-c {
    justify-content: center;
    align-items: center;
}
.me-fx-c-end {
    justify-content: center;
    align-items: flex-end;
}

/* 尾部对其 */
.me-fx-end {
    justify-content: flex-end;
}
.me-fx-end-c {
    justify-content: flex-end;
    align-items: center;
}
.me-fx-end-end {
    justify-content: flex-end;
    align-items: flex-end;
}
.me-fx-1 {
    flex: 1;
}

/* 浮动布局 */

/* 浮动元素父容器 */
.me-ft-p::after {
    content: '';
    display: block;
    clear: both;
}

/* 左浮动 */
.me-lt-ft {
    float: left;
}

/* 又浮动 */
.me-rt-ft {
    float: right;
}

/* 多余文本省略号截取样式 */
.me-full-text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.me-full-line2 {
    -webkit-line-clamp: 2;
}

/* 定位 */
.me-pos-rel {
    position: relative;
}
.me-pos-abs {
    position: absolute;
}
.me-pos-fixed {
    position: fixed;
}
image {
    vertical-align: middle;
}
page {
    background-color: #f9f9f9;
}
.selling_list {
    width: 100%;
    min-height: 100vh;
    padding: 20rpx 20rpx 120rpx;
    box-sizing: border-box;
    display: flex;
}
.selling_left {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.selling_right {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}
.selling_item {
    width: calc(100% - 11rpx);
    margin-top: 20rpx;
    position: relative;
    border-radius: 16rpx;
    overflow: hidden;
}
.selling_item_image {
    width: 100%;
    vertical-align: bottom;
}
.selling_item_info {
    /* position: absolute;
  left: 0;
  bottom: 0; */
    width: 100%;
    /* height: 84rpx; */
    background: #ffffff;
    border-radius: 0rpx 0rpx 16rpx 16rpx;
    padding: 4rpx 20rpx 12rpx;
    box-sizing: border-box;
}
.selling_item_info_up {
    display: flex;
    align-items: center;
}
.selling_item_info_up-image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 4rpx;
}
.selling_item_info_up-text {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
    font-weight: bold;
    color: #333;
}
.selling_item_info_down {
    margin-top: 8rpx;
    width: 296rpx;
    font-size: 20rpx;
    font-weight: 400;
    line-height: 28rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.desc {
    -webkit-line-clamp: 2;
    margin-top: 8rpx;
    font-size: 20rpx;
    font-weight: 400;
    line-height: 28rpx;
    color: #333;
}

