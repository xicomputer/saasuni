<view class="details"><view class="details_title"><image class="details_title_left" src="{{dynamicData.userInfo.headimgurl}}" mode="aspectFill"></image><view class="details_title_right"><view class="details_title_name"><view>{{dynamicData.userInfo.nickname}}</view><block wx:if="{{dynamicData.isMember}}"><image src="/static/pages/img/index/member_icon.png"></image></block></view><view class="details_title_sign">{{dynamicData.userInfo.signature}}</view></view></view><view class="details_content">{{dynamicData.content}}</view><view class="details_image"><block wx:for="{{dynamicData.imagList}}" wx:for-item="pitem" wx:for-index="pindex" wx:key="pindex"><block><image src="{{pitem}}" data-list="{{dynamicData.imagList}}" data-src="{{pitem}}" mode="aspectFill" data-event-opts="{{[['tap',[['imgClick',['$event']]]]]}}" catchtap="__e"></image></block></block></view><view class="details_foot"><view class="details_foot_left">{{"发布时间："+dynamicData.addTime}}</view><view data-event-opts="{{[['tap',[['operationPraise',['$event']]]]]}}" class="details_foot_right" bindtap="__e"><image src="{{dynamicData.isPraise?'/pages/img/gooded.png':'/pages/img/index/dynamic_icon_4.png'}}"></image><view>{{dynamicData.praise}}</view></view></view></view>