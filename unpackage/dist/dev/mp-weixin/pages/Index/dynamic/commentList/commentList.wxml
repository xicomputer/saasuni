<view class="comment-list"><block wx:if="{{!commentList.length}}"><view class="no-dynamic"><image class="no-dynamic-img" src="/static/pages/img/no_notice.png"></image><view class="no-dynamic-text">暂无更多评论</view></view></block><block wx:for="{{commentList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="user-dynamic-itme"><view class="store-info-box"><image class="store-dynamic-logo" src="{{item.headimgurl}}"></image><view class="store-dynamic-box-info"><view class="user-dynamic-name-box"><view class="user-dynamic-name">{{item.userInfo.nickname}}</view><block wx:if="{{item.isMember}}"><image class="user-dynamic-member" src="/static/pages/img/index/member_icon.png"></image></block></view><view class="user-dynamic-signature">{{item.userInfo.signature||'暂无个性签名'}}</view></view><view class="user-info-right-top"><view>{{item.addTime}}</view><view class="user-info-solid"></view><view class="user-info-icon" data-id="{{item.id}}" data-idx="{{index}}" data-event-opts="{{[['tap',[['operationPraise',['$event']]]]]}}" bindtap="__e"><image class="store-dynamic-bottom-item-icon" src="{{item.isPraise?'/pages/img/index/dynamic/praised.png':'/pages/img/index/dynamic/praise.png'}}"></image><text>{{item.praise||'点赞'}}</text></view></view></view><view class="user-dynamic-text">{{item.content}}</view><block wx:if="{{item.imagList.length}}"><scroll-view style="width:100%;padding-top:20rpx;" scroll-x="{{true}}"><view class="user-img-list"><block wx:for="{{item.imagList}}" wx:for-item="pitem" wx:for-index="index1" wx:key="index1"><image class="{{[item.imagList.length>=3?'user-img-item user-small-img':'user-img-item']}}" data-list="{{item.imagList}}" data-src="{{pitem}}" mode="aspectFill" src="{{pitem}}" data-event-opts="{{[['tap',[['imgClick',['$event']]]]]}}" catchtap="__e"></image></block></view></scroll-view></block></view></block></block><block wx:if="{{stopLoad&&commentList.length}}"><view class="no-more">没有更多了~</view></block></view>