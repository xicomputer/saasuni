
.category {
    width: 100%;
}
.category_item {
    width: 100%;
    height: 252rpx;
    display: flex;
    align-items: center;
    margin-top: 16rpx;
}
.category-left {
    width: 208rpx;
    height: 252rpx;
    background: linear-gradient(90deg, #ff3236 0%, #ff8163 100%);
    box-shadow: 6rpx 0rpx 12rpx rgba(0, 0, 0, 0.16);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.classify-name {
    width: 168rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    line-height: 32rpx;
    color: #ffffff;
    text-align: center;
}
.category-left-btn {
    width: 138rpx;
    height: 40rpx;
    background: #ffffff;
    box-shadow: 0rpx 2rpx 6rpx #ff4742;
    border-radius: 26rpx;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 500;
    color: #ff0000;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 40rpx;
}
.category-list {
    width: -webkit-fit-content;
    width: fit-content;
    display: flex;
    height: 100%;
    flex-wrap: nowrap;
    min-width: 542rpx;
    background-color: #fff;
}
.category-list-goods {
    width: 160rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    margin-right: 30rpx;
}
.category-list-goods-img {
    width: 120rpx;
    height: 120rpx;
}
.category-list-goods-name {
    width: 140rpx;
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #333333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
}
.category-list-goods-price-box {
    width: 140rpx;
    display: flex;
    align-items: flex-end;
}
.category-list-goods-nowprice {
    height: 34rpx;
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #ff0000;
}
.category-list-goods-origin-price {
    height: 28rpx;
    font-size: 20rpx;
    font-family: PingFang SC;
    font-weight: 400;
    margin-left: 10rpx;
    color: #999999;
    text-decoration: line-through;
}

