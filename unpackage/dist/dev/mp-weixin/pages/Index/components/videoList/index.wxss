
.selling_list {
    width: 100%;
    min-height: 100vh;
    padding: 20rpx 20rpx 120rpx;
    box-sizing: border-box;
    display: flex;
}
.selling_left {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}
.selling_right {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}
.selling_item {
    width: calc(100% - 11rpx);
    margin-top: 20rpx;
    position: relative;
}
.selling_item_image {
    width: 100%;
    vertical-align: bottom;
    border-radius: 16rpx;
}
.selling_item_info {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 84rpx;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
    border-radius: 0rpx 0rpx 16rpx 16rpx;
    padding: 4rpx 20rpx 12rpx;
    box-sizing: border-box;
}
.selling_item_info_up {
    display: flex;
    align-items: center;
}
.selling_item_info_up-image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 4rpx;
}
.selling_item_info_up-text {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
    font-weight: bold;
    color: #ffffff;
}
.selling_item_info_down {
    margin-top: 8rpx;
    width: 296rpx;
    font-size: 20rpx;
    font-weight: 400;
    line-height: 28rpx;
    color: #ffffff;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

