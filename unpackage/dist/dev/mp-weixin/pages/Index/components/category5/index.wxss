/* flex布局 */

/* flex盒子默认排列 */
.me-fx-row {
    display: flex;
}
.me-fx-col {
    display: flex;
    flex-direction: column;
}
.me-fx-start-c {
    align-items: center;
}
.me-fx-start-end {
    align-items: flex-end;
}

/* 两端对齐 */
.me-fx-sb {
    justify-content: space-between;
}
.me-fx-sb-c {
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 20rpx;
}
.me-fx-sb-end {
    justify-content: space-between;
    align-items: flex-end;
}

/* 两端对齐，两侧有边距 */
.me-fx-sa {
    justify-content: space-around;
}
.me-fx-sa-c {
    justify-content: space-around;
    align-items: center;
}
.me-fx-sa-end {
    justify-content: space-around;
    align-items: flex-end;
}

/* 居中对齐 */
.me-fx-c {
    justify-content: center;
}
.me-fx-c-c {
    justify-content: center;
    align-items: center;
}
.me-fx-c-end {
    justify-content: center;
    align-items: flex-end;
}

/* 尾部对其 */
.me-fx-end {
    justify-content: flex-end;
}
.me-fx-end-c {
    justify-content: flex-end;
    align-items: center;
}
.me-fx-end-end {
    justify-content: flex-end;
    align-items: flex-end;
}
.me-fx-1 {
    flex: 1;
}

/* 浮动布局 */

/* 浮动元素父容器 */
.me-ft-p::after {
    content: '';
    display: block;
    clear: both;
}

/* 左浮动 */
.me-lt-ft {
    float: left;
}

/* 又浮动 */
.me-rt-ft {
    float: right;
}

/* 多余文本省略号截取样式 */
.me-full-text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.me-full-line2 {
    -webkit-line-clamp: 2;
}

/* 定位 */
.me-pos-rel {
    position: relative;
}
.me-pos-abs {
    position: absolute;
}
.me-pos-fixed {
    position: fixed;
}
image {
    vertical-align: middle;
}
.classify-item {
    background-color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
}
.classify-item:not(:first-child) {
    margin-top: 20rpx;
}
.classify-item .itemp-top {
    height: 104rpx;
    background-color: #fe4f4f;
    box-shadow: 0px 8px 12px rgba(145, 33, 33, 0.17);
    padding: 0 30rpx;
    box-sizing: border-box;
}
.classify-item .goods-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 12rpx;
}
.classify-item .class-title {
    font-size: 32rpx;
    color: #fff;
    font-weight: bold;
}
.classify-item .even-more {
    font-size: 24rpx;
    color: #fff;
}
.goods-scroll {
    padding: 0 30rpx;
    box-sizing: border-box;
}
.goods-list {
    padding: 30rpx 0;
}
.goods-item {
    flex-shrink: 0;
    box-shadow: 0px 0px 12px rgba(0, 0, 0, 0.09);
    width: 192rpx;
    border-radius: 20rpx;
    overflow: hidden;
}
.goods-item:not(:first-child) {
    margin-left: 20rpx;
}
.goods-img {
    width: 184rpx;
    height: 184rpx;
    background-color: #ccc;
}
.goods-item .name {
    font-size: 24rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 100%;
}
.price {
    width: 100%;
}
.price .now-price {
    font-size: 28rpx;
    color: #ff0000;
    font-weight: bold;
}
.price .old-price {
    font-size: 16rpx;
    color: #999;
    text-decoration: line-through;
    position: relative;
    bottom: 2px;
    margin-left: 5rpx;
}

