<view class="video-container"><video class="video-detail" loop="{{true}}" autoplay="{{true}}" enable-play-gesture="{{false}}" enable-progress-gesture="{{true}}" show-center-play-btn="{{false}}" controls="{{false}}" src="{{videoInfo.videoUrl}}"></video><view class="news-goods-container"><view class="news-goods-top"><view class="news-goods-name">{{videoInfo.commodityName}}</view><view class="news-goods-price"><view class="news-goods-sale-price">{{'￥'+(videoInfo.activityType==1||videoInfo.activityType==2&&videoInfo.isMember==1?videoInfo.lowPrice:videoInfo.originalPrice)+''}}</view><block wx:if="{{videoInfo.originalPrice!=videoInfo.lowPrice}}"><view class="news-goods-origin-price">{{"￥"+videoInfo.originalPrice}}</view></block></view></view><view class="news-goods-bottom"><view class="news-goods-introduction">{{"产品介绍："+videoInfo.description}}</view><view class="news-goods-btn" data-id="{{videoInfo.id}}" data-event-opts="{{[['tap',[['toBuy',['$event']]]]]}}" bindtap="__e">立即购买</view></view></view><block wx:if="{{isShare}}"><image class="to-store-icon" src="/static/pages/img/index/video_to_store_icon.png" data-event-opts="{{[['tap',[['toStore',['$event']]]]]}}" bindtap="__e"></image></block></view>