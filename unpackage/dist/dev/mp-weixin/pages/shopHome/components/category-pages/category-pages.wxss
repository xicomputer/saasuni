    width: calc(100% - 60rpx);
    height: 75rpx;
    border-radius: 20px;
    background-color: rgb(241, 241, 241);
    position: absolute;
    padding-left: 60rpx;
    color: #ababab;
    font-size: 32rpx;
    font-weight: 300;
}
.search-container .relative text {
    position: absolute;
    right: 30rpx;
    top: 15rpx;
    color: #f7724a;
    font-size: 32rpx;
}
.search-container .relative text::before {
    content: '';
    display: inline-block;
    background-color: #f79a7e;
    width: 1px;
    top: 5rpx;
    height: 33rpx;
    position: absolute;
    right: 80rpx;
}

