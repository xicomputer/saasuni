.shops-slogan .slogan-container .single {
    width: 700rpx;
    /* height: 570rpx; */
    background-color: rgb(243 243 243);
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-bottom: 20rpx;
    margin-bottom: 30rpx;
}
.shops-slogan .slogan-container .single image {
    width: 700rpx;
    height: 376rpx;
    border-radius: 20rpx 20rpx 0 0;
}
.shops-slogan .slogan-container .single text {
    font-size: 28rpx;
    width: 636rpx;
    /* height: 160rpx; */
    margin-top: 28rpx;
    letter-spacing: 1rpx;
}
.default {
    width: 100vw;
    height: 100vh;
    background-color: #fff;
    position: relative;
}
.default text {
    position: absolute;
    top: 800rpx;
    left: 200rpx;
}
.default image {
    position: absolute;
    top: 260rpx;
    left: 70rpx;
}

/* 视频模块 */
.video {
    position: relative;
    display: flex;
    justify-content: center;
    margin-bottom: 40rpx;
}
.video video {
    width: 690rpx;
    height: 394rpx;
    border-radius: 10px;
    z-index: 1;
}
.video .video-img {
    position: absolute;
    top: -36rpx;
    left: 0;
    width: 100%;
    height: 396rpx;
}

