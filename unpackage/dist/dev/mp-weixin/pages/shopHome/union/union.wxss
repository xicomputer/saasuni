/* flex布局 */

/* flex盒子默认排列 */
.me-fx-row {
    display: flex;
}
.me-fx-col {
    display: flex;
    flex-direction: column;
}
.me-fx-start-c {
    align-items: center;
}
.me-fx-start-end {
    align-items: flex-end;
}

/* 两端对齐 */
.me-fx-sb {
    justify-content: space-between;
}
.me-fx-sb-c {
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 20rpx;
}
.me-fx-sb-end {
    justify-content: space-between;
    align-items: flex-end;
}

/* 两端对齐，两侧有边距 */
.me-fx-sa {
    justify-content: space-around;
}
.me-fx-sa-c {
    justify-content: space-around;
    align-items: center;
}
.me-fx-sa-end {
    justify-content: space-around;
    align-items: flex-end;
}

/* 居中对齐 */
.me-fx-c {
    justify-content: center;
}
.me-fx-c-c {
    justify-content: center;
    align-items: center;
}
.me-fx-c-end {
    justify-content: center;
    align-items: flex-end;
}

/* 尾部对其 */
.me-fx-end {
    justify-content: flex-end;
}
.me-fx-end-c {
    justify-content: flex-end;
    align-items: center;
}
.me-fx-end-end {
    justify-content: flex-end;
    align-items: flex-end;
}
.me-fx-1 {
    flex: 1;
}

/* 浮动布局 */

/* 浮动元素父容器 */
.me-ft-p::after {
    content: '';
    display: block;
    clear: both;
}

/* 左浮动 */
.me-lt-ft {
    float: left;
}

/* 又浮动 */
.me-rt-ft {
    float: right;
}

/* 多余文本省略号截取样式 */
.me-full-text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.me-full-line2 {
    -webkit-line-clamp: 2;
}

/* 定位 */
.me-pos-rel {
    position: relative;
}
.me-pos-abs {
    position: absolute;
}
.me-pos-fixed {
    position: fixed;
}
image {
    vertical-align: middle;
}

/* pages/shopHome/union/union.wxss */
page {
    background-color: #f9f9f9;
}
.union_info {
    height: 328rpx;
    margin: 32rpx 32rpx 0rpx;
    background-color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
}
.union_left {
    position: relative;
}
.union_img {
    width: 290rpx;
    height: 328rpx;
    background: #000;
}
.union_pro_title {
    position: absolute;
    bottom: 15rpx;
    width: 290rpx;
    text-align: center;
}
.union_pro_title > text {
    color: #fff;
    font-size: 22rpx;
    font-weight: bold;
    padding: 0rpx 20rpx;
    letter-spacing: 1rpx;
}
.union_btn {
    position: absolute;
    top: 15rpx;
    left: 20rpx;
    background-color: #ff6363;
    color: #fff;
    font-size: 20rpx;
    letter-spacing: 1rpx;
    padding: 5rpx 10rpx;
    border-radius: 6rpx;
}
.union_right {
    padding: 20rpx;
}
.shop_icon {
    width: 40rpx;
    height: 40rpx;
    background-color: #000;
    border-radius: 50%;
    margin-right: 20rpx;
}
.shop_title {
    font-size: 28rpx;
}
.union_desc {
    text-indent: 60rpx;
    font-size: 20rpx;
    color: #999999;
    -webkit-line-clamp: 4;
    height: 128rpx;
    flex-shrink: 0;
}
.union_right_pro {
    margin-top: 10rpx;
}
.right_pro {
    width: 112rpx;
    height: 112rpx;
    background-color: #999999;
    border-radius: 8rpx;
    position: relative;
    overflow: hidden;
}
.pro_bg {
    position: absolute;
    width: 100%;
    height: 32rpx;
    bottom: 0;
    background-color: #000;
    opacity: 0.6;
}
.pro_price {
    position: absolute;
    font-size: 20rpx;
    color: #fff;
    bottom: 0;
    width: 100%;
    text-align: center;
}
.union_info:last-child {
    margin-bottom: 32rpx;
}

