<view class="goodsCommentDetails"><view class="goodsCommentDetails-item"><view class="item-headinfo"><view class="headinfo-left" data-id="{{0}}" data-name="{{goodsCommentDetails.nickname}}" data-userid="{{goodsCommentDetails.userId}}" data-event-opts="{{[['tap',[['reply',['$event']]]]]}}" bindtap="__e"><image class="headinfo-img" src="{{goodsCommentDetails.headimgurl}}"></image></view><view class="headinfo-right"><view class="headinfo-name">{{goodsCommentDetails.nickname}}</view><view class="headinfo-start"><block wx:for="{{5}}" wx:for-item="item" wx:for-index="index" wx:key="index"><image class="start-img" src="{{'../../img/order/start_b'+(goodsCommentDetails.grade>index?6-goodsCommentDetails.grade+index:0)+'.png'}}" data-index="{{index+1}}" data-event-opts="{{[['tap',[['changeStartLevel',['$event']]]]]}}" bindtap="__e"></image></block></view></view></view><view class="item-text">{{goodsCommentDetails.content}}</view><block wx:if="{{goodsCommentDetails.imagList.length}}"><view class="item-image"><block wx:for="{{goodsCommentDetails.imagList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><image class="image-img" src="{{item}}" data-list="{{goodsCommentDetails.imagList}}" data-src="{{item}}" data-event-opts="{{[['tap',[['zoomImg',['$event']]]]]}}" bindtap="__e"></image></block></view></block><view class="item-footer"><view class="footer-time">{{goodsCommentDetails.addTime+"发表"}}</view><view class="footer-operate"><view class="operate-item"><image class="operate-icon" src="/static/pages/img/comment.png"></image><view class="operate-num">{{goodsCommentDetails.reply}}</view></view><view class="operate-item" data-id="{{goodsCommentDetails.id}}" data-index="{{0}}" data-event-opts="{{[['tap',[['liketap',['$event']]]]]}}" bindtap="__e"><block wx:if="{{!goodsCommentDetails.myPraise}}"><image class="operate-icon" src="/static/pages/img/good.png"></image></block><block wx:else><image class="operate-icon" src="/static/pages/img/gooded.png"></image></block><view class="operate-num">{{goodsCommentDetails.praise}}</view></view></view></view><block wx:if="goodsCommentDetails.marchantContent"><view class="item-replay"><view class="item-replay-name">商家回复</view><view class="item-replay-text">{{goodsCommentDetails.marchantContent}}</view></view></block></view><view class="goodsCommentDetails-comment"><view class="comment-title">精彩评论</view><view class="comment-content"><block wx:for="{{commentReply}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="content-info"><view class="info-left"><image class="info-img" data-id="{{item.id}}" data-name="{{item.userInfo.nickname}}" data-userid="{{item.userId}}" src="{{item.userInfo.headimgurl}}" data-event-opts="{{[['tap',[['reply',['$event']]]]]}}" bindtap="__e"></image></view><view class="info-right"><view class="info-name">{{item.userInfo.nickname}}</view><view class="info-text">{{item.content}}</view><block wx:if="{{item.replytoreplyList.length!=0}}"><view class="content-reply"><block wx:for="{{item.replytoreplyList}}" wx:for-item="ritem" wx:for-index="rindex" wx:key="rindex"><view class="replay-box" data-id="{{item.id}}" data-name="{{ritem.userName}}" data-userid="{{ritem.userId}}" data-event-opts="{{[['tap',[['reply',['$event']]]]]}}" bindtap="__e"><text class="replay-info">{{ritem.userName+"回复"+ritem.userReplyName+":"}}</text><text class="replay-text">{{ritem.content}}</text></view></block></view></block><view class="footer-time" style="margin-top:20rpx;">{{item.addTime}}</view></view></view></block></view></view><view class="goodsCommentDetails-footer"><input class="footer-input" maxlength="80" placeholder="{{fabu}}" focus="{{isfocus}}" data-event-opts="{{[['input',[['getvalue',['$event']]]]]}}" value="{{value}}" bindinput="__e"/><view data-event-opts="{{[['tap',[['fasong',['$event']]]]]}}" class="footer-btn" bindtap="__e">发布</view></view><view class="goodsCommentDetails-fill"></view></view>